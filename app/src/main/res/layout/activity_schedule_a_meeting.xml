<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sheduler.meeting.iiitd.meetingscheduler.activity.ScheduleMeeting">

    <TextView
        android:text="Prof. Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="15dp"
        android:background="#3d87f5"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/schedule_a_meeting_name"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Details"
        android:paddingLeft="20dp"
        android:paddingBottom="25dp"
        android:paddingTop="30dp"
        android:layout_below="@+id/schedule_a_meeting_name"
        android:id="@+id/schedule_a_meeting_details"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Select Date"
        android:background="#ffffff"
        android:id="@+id/schedule_a_meeting_date_picker"
        android:layout_below="@+id/schedule_a_meeting_details"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_a_meeting_slot"
        android:layout_below="@+id/schedule_a_meeting_date_picker"
        android:layout_marginTop="20dp">
    </Spinner>

    <TextView
        android:id="@+id/schedule_a_meeting_time_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/schedule_a_meeting_slot"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Proceed"
        android:background="#ffffff"
        android:id="@+id/schedule_a_meeting_proceed"
        android:layout_below="@+id/schedule_a_meeting_time_slot"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
