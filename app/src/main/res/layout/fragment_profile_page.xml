<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sheduler.meeting.iiitd.meetingsheduler.activity.ProfilePage">

<RelativeLayout
android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="15dp"
        android:background="#3d87f5"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="21sp"
        android:id="@+id/profile_header"
        android:gravity="center"
        />

    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/profile_header"
        android:gravity="center"
        android:weightSum="3"
        >

        <ImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_drawer"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Email"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/profile_edit_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Details"
        android:layout_below="@+id/llProfile"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_logout_from_google"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/profile_edit_details"
        android:layout_centerHorizontal="true"
 />
</RelativeLayout>


</ScrollView>